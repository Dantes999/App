<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox xmlns:android="http://schemas.android.com/apk/res/android"
            android:text="Wecker"
            android:textSize="16dp"
            android:paddingHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/border_settings"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:buttonTint="?attr/colorTertiary"/>

        <CheckBox xmlns:android="http://schemas.android.com/apk/res/android"
            android:text="Nachtzeit"
            android:textSize="16dp"
            android:paddingHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            app:trackColorActive="?attr/colorSecondary"
            app:thumbColor="?attr/colorSecondary"
            android:valueTo="24"/>
        <TextView
            android:id="@+id/RangeSliderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="5dp"
            android:textSize="16dp"
            android:background="?attr/colorTertiary"
            android:textColor="?attr/colorOnTertiary"
            android:textStyle="bold"
            android:text="  Info" />
        <TextView
            android:padding="16dp"
            android:textSize="16dp"
            android:id="@+id/Datenschutz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"
            android:background="@drawable/border_settings"
            android:text="Datenschutz Richtlinien" />
        <TextView
            android:id="@+id/ÜberUns"
            android:padding="16dp"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"
            android:background="@drawable/border_settings"
            android:text="Über uns" />
        <TextView
            android:id="@+id/Version"
            android:padding="16dp"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"
            android:background="@drawable/border_settings"
            android:text="App Version                                           v.1.0.00(01)" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>