<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox xmlns:android="http://schemas.android.com/apk/res/android"
            android:text="  Wecker"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:button="@null"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/border_settings"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        <CheckBox xmlns:android="http://schemas.android.com/apk/res/android"
            android:text="  Nachtzeit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:button="@null"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="10"/>

        <TextView
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="?attr/colorTertiary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnTertiary"
            android:textStyle="bold"
            android:text="  Info" />
        <TextView
            android:id="@+id/Datenschutz"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnPrimary"
            android:background="@drawable/border_settings"
            android:text="  Datenschutz Richtlinien" />
        <TextView
            android:id="@+id/ÜberUns"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnPrimary"
            android:background="@drawable/border_settings"
            android:text="  Über uns" />
        <TextView
            android:id="@+id/Version"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnPrimary"
            android:background="@drawable/border_settings"
            android:text="  App Version                                           v.1.0.00(01)" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>