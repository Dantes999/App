<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plan_item_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:paddingVertical="@dimen/divider_horizontal_padding"
            android:background="?attr/colorTertiary"
            android:textSize="@dimen/list_fontSize_Header"
            android:textColor="?attr/colorOnTertiary"
            tools:text="Header Title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/list_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/plan_image"
                android:layout_width="54dp"
                android:layout_height="51dp"
                android:src="@drawable/ic_planer_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plan_name"
                    android:layout_width="186dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="20dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/plan_time"
                    android:layout_width="106dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/plan_image2"
                android:layout_width="66dp"
                android:layout_height="67dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_planer_time" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>