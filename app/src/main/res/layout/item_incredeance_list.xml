<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width= "match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/incredeance_item_layout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="4dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorQuaternary">
            <TextView
                android:id="@+id/incredeance_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:layout_alignParentTop="true"
                android:textColor="?attr/colorOnQuaternary"
                android:text="Incredeanc"
                android:textSize="19dp"/>
            <TextView
                android:id="@+id/incredeance_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="?attr/colorOnQuaternary"
                android:textSize="29dp"
                android:text="Amount"/>
            <ImageView
                android:id="@+id/incredeance_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_sourdough"
                android:alpha="0.2"
                app:tint="?attr/colorOnAccent" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>